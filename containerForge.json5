{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: [
        'Allowed Ubuntu Version for Base Images',
      ],
      matchDatasources: [
        'docker',
      ],
      matchPackageNames: [
        '/ubuntu/',
      ],
      allowedVersions: '/24\\.04/',
    },
    {
      description: [
        'Allow Unstable Versions',
      ],
      matchDatasources: [
        'github-releases',
      ],
      matchFileNames: [
        '**/docker-bake.hcl',
      ],
      matchPackageNames: [
        '/Emby\\.Releases/',
      ],
      ignoreUnstable: false,
    },
  ]
}
