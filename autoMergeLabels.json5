{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor"],
      "addLabels": ["automerge"]
    },
    {
      "matchUpdateTypes": ["patch"],
      "addLabels": ["automerge"]
    },
    {
      "matchUpdateTypes": ["digest"],
      "addLabels": ["automerge"]
    },
    {
      "matchUpdateTypes": ["pin", "pinDigest"],
      "addLabels": ["automerge"]
    },
    {
      "matchUpdateTypes": ["lockfile"],
      "addLabels": ["automerge"]
    },
  ]
}
