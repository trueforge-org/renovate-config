{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: [
        'Release Rules for App Updates',
      ],
      addLabels: [
        'app/{{parentDir}}',
      ],
      additionalBranchPrefix: '{{parentDir}}-',
      matchFileNames: [
        '**/docker-bake.hcl',
        '**/Dockerfile',
      ],
      semanticCommitScope: '{{parentDir}}',
      semanticCommitType: 'release',
    },
    {
      description: [
        'Allowed Ubuntu Version for Base Images',
      ],
      matchDatasources: [
        'docker',
      ],
      matchPackageNames: [
        '/ubuntu/',
      ],
      allowedVersions: '/24\\.04/',
    },
    {
      description: [
        'Allow Unstable Versions',
      ],
      matchDatasources: [
        'github-releases',
      ],
      matchFileNames: [
        '**/docker-bake.hcl',
      ],
      matchPackageNames: [
        '/Emby\\.Releases/',
      ],
      ignoreUnstable: false,
    },
  ]
}
